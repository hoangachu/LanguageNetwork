    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Ask public question</h4>
                <img class="logoaskquestion close" src="~/images/pe0pleask.png" />
                @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
            </div>
            <div class="modal-body">

                <div class="col-md-3 sidebarleft">

                </div>
                <div class="col-md-6 centerlayout">
                 
                    <div class="row">
                        <ul>
                            <li>
                                <b>Title</b>
                            </li>
                            <li class="subtext">
                                Be specific and imagine you’re asking a question to another person
                            </li>
                            <li class="inputtitle">
                                <input id="title" name="title" type="text" maxlength="300" tabindex="100"
                                       placeholder="e.g. How to say 'I love you' in Spanish?"
                                       class="s-input js-post-title-field" value="" data-min-length="15" data-max-length="150" autocomplete="off" required>
                            </li>
                        </ul>

                    </div>
                    <div class="row">
                        <ul>
                            <li>
                                <b>Body</b>
                            </li>
                            <li class="subtext">
                                Include all the information someone would need to answer your question
                            </li>
                            <li>
                                @*<textarea id="questionbody">Here is typing...</textarea>*@
                                <div class="wmd-panel">
                                    <div id="wmd-button-bar"></div>
                                    <label for="answer_question_body" class="required"></label>
                                    <textarea class="wmd-input" id="ask_question_body"></textarea>
                                </div>

                                <div id="wmd-preview" class="wmd-panel wmd-preview"></div>


                            </li>
                        </ul>
                    </div>
                    <div class="row">
                        <ul>
                            <li>
                                <b>Tags</b>
                            </li>
                            <li class="subtext">
                                Add up to 5 tags to describe what your question is about
                            </li>
                            <li class="inputtags">
                                <input type="text" value="" data-role="tagsinput" id="taginput" class="s-input js-tageditor-replacing"
                                       placeholder="e.g. (china grammar verb)" />
                            </li>
                        </ul>
                    </div>
             
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="">Publish</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>

    </div>

