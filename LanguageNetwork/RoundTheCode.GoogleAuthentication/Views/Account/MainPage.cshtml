<div class="central-meta">
    <div class="new-postbox">
        <p class="">
            <b class="textheader"> Top Questions</b>
            <button id="btnQuestion">Ask Question</button>
            <div class="btn-group btn-group-toggle button_head" data-toggle="buttons">
                <label class="btn  btn-lg-open btn-lg bt_fil active btn_i" style="">
                    <input type="radio" name="options" id="option1" autocomplete="off" checked> Interesting
                </label>
                <label class="btn  btn-lg-open btn-lg bt_fil btn_b" style=" border-color: #9fa6ad; ">
                    <input type="radio" name="options" id="option2" autocomplete="off"> Bountied
                </label>
                <label class="btn btn-lg-open  btn-lg bt_fil btn_h" style=" border-color: #9fa6ad; ">
                    <input type="radio" name="options" id="option3" autocomplete="off"> Hot
                </label>
                <label class="btn  btn-lg-open btn-lg  bt_fil btn_w" style=" border-color: #9fa6ad; ">
                    <input type="radio" name="options" id="option4" autocomplete="off"> Week
                </label>
                <label class="btn  btn-lg-open btn-lg bt_fil btn_m" style=" border-color: #9fa6ad;">
                    <input type="radio" name="options" id="option5" autocomplete="off"> Month
                </label>
            </div>
        </p>

    </div>

</div>
<div class="central-meta_v2">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-3">
                <div class="ul_number">
                    <p class="text_gif">
                        @item.Vote
                    </p>
                    <p>
                        votes
                    </p>
                </div>
                <div class="ul_number ml-4">
                    <p class="text_center" @ViewBag.Color>
                        @item.answer
                    </p>
                    <p class="text_center_bottom">
                        answers
                    </p>
                </div>
                <div class="ul_number mar_end ml-5">
                    <p class="text_gif">
                        @item.view
                    </p>
                    <p>
                        views
                    </p>
                </div>
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-12">
                        <a href="" class="question-hyperlink">
                            @item.QuestionTitle
                        </a>
                    </div>
                </div>

                <div class="row  mt-3">
                    <div class="col-md-6">
                        @foreach (var tag in item.listTag)
                        {
                            <a href="/questions/tagged/java" class="post-tag" title="" rel="tag" id="regtag">
                                @tag.TagText
                                <span class="tooltiptext tooltip-bottom">
                                    @tag.Tooltip
                                </span>
                            </a>
                        }

                    </div>

                    <div class="col-md-6" style="text-align:right;">
                        <a href="/questions/67235715/what-does-this-command-mean-in-linux" class="started-link">
                            asked <span title="2021-04-23 19:16:16Z" class="relativetime">1 min ago</span>
                        </a><a href="/users/8181909/saurav-saha" class="author_name">@item.User.UserName</a><p class="reputation"> 471 </p>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<script src="~/js/main_page.js"></script>
